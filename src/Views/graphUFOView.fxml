<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.GraphUFOController">
   <children>
      <VBox alignment="CENTER" layoutX="102.0" layoutY="-1.0" prefHeight="600.0" prefWidth="800.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="titleLabel" text="International UFO Reports">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <BarChart fx:id="barChart" legendVisible="false" prefHeight="400.0" prefWidth="700.0">
              <xAxis>
                <CategoryAxis side="BOTTOM" fx:id="xAxis" />
              </xAxis>
              <yAxis>
                <NumberAxis fx:id="yAxis" side="LEFT" />
              </yAxis>
            </BarChart>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <Button fx:id="btn_canada" mnemonicParsing="false" onAction="#changeToCanadaView" prefHeight="50.0" prefWidth="150.0" text="View Canadian Results" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font size="14.0" />
                     </font></Button>
                  <Button fx:id="btn_pieChart" mnemonicParsing="false" onAction="#changeToShapesView" prefHeight="50.0" prefWidth="150.0" text="View UFOs by Shape" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font size="14.0" />
                     </font></Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="50.0" right="50.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
